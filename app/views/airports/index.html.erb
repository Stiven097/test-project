<section>
    <div class="container">
        <div class="row mx-auto text-align-center mt-5 mb-5">
            <div class="col text-center">
                <h1>Airports List</h1>
            </div>
            <div class="col text-center mt-2">
                <%= link_to "Create New", new_airport_path, class: "btn btn-primary" %>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <% @airports.each do |a| %>
                    <div class="row">
                        <div class="col-4">
                            <%= link_to airport_path(a), class: "text-decoration-none" do %>
                                <p class="fs-5"><%= a.airport %></p>
                            <% end %>
                        </div>
                        <div class="col-2 text-start">
                            <%= link_to "Click to edit", edit_airport_path(a), class: "btn btn-success" %>
                        </div>
                        <div class="col text-start">
                            <%= link_to "Delete", airport_path(a), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger" %>
                        </div>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</section>