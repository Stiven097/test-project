<section>
    <div class="container">
        <div class="row mx-auto text-align-center mt-5 mb-5">
            <div class="col text-start mt-2">
                <%= link_to "Go to Airlines", airlines_path, class: "btn btn-success" %>
            </div>
            <div class="col text-center">
                <h1>Flights List</h1>
            </div>
            <div class="col text-center mt-2">
                <%= link_to "Create New", new_flight_path, class: "btn btn-primary" %>
            </div>
            <div class="col text-end mt-2">
                <%= link_to "Go Home", root_path, class: "btn btn-success" %>
            </div>
        </div>

        <% if @flights.blank? %>
            <div class="container">
                <div class="row mx-auto text-align-center mt-10">
                    <p class="fs-3">No data added yet.</p>
                </div>
            </div>
        <% else %>
            <div class="row">
                <div class="col-12">
                    <table>
                        <thead>
                            <tr>
                                <th><p class="fs-5">Flight Number</p></th>
                                <th><p class="fs-5">Actions</p></th>
                            </tr>
                        </thead>
                        <tbody>
                            <% @flights.each do |f| %>
                                <tr>
                                    <td style="padding-right: 20px;">
                                        <%= link_to flight_path(f), class: "text-decoration-none" do %>
                                            <p class="fs-5">Flight No. <%= f.flight_number %></p>
                                        <% end %>
                                    </td>
                                    <td>
                                        <%= link_to "Click to edit", edit_flight_path(f), class: "btn btn-success" %>
                                        <%= link_to "Delete", flight_path(f), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger" %>
                                    </td>
                                </tr>
                            <% end %>
                        </tbody>
                    </table>
                </div>
            </div>
        <% end %>
    </div>
</section>